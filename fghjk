// --- separator across full badge width + equal gap between rows ---
if (rows.length > 1 && i < rows.length - 1) {
  ctx.strokeStyle = style.separatorColor || '#000';
  ctx.lineWidth = 1;

  // hr sits exactly in the middle of the vertical gap between rows
  const hrY = y + Math.floor(rowH / 2) + Math.floor(rowGap / 2);

  // draw full width (border to border), aligned to device pixel
  ctx.beginPath();
  ctx.moveTo(0.5, hrY + 0.5);
  ctx.lineTo(cssWidth - 0.5, hrY + 0.5);
  ctx.stroke();
}
// --- end separator ---
